# Database (Railway Postgres in production)
# Example format:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require"
DATABASE_URL="replace-me"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="replace-me-with-a-long-random-string"

# OAuth providers
GOOGLE_CLIENT_ID="replace-me"
GOOGLE_CLIENT_SECRET="replace-me"

# Public support contact shown in /contact (safe to expose)
NEXT_PUBLIC_SUPPORT_EMAIL="replace-me@example.com"

# QR token signing (keep secret)
QR_SECRET="replace-me-with-a-long-random-string"

# Web Push (VAPID) - staff notifications (optional)
# Generate keys: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY="replace-me"
VAPID_PRIVATE_KEY="replace-me"
VAPID_SUBJECT="mailto:replace-me@example.com"

# One-time setup: first manager creation (min length 12)
INITIAL_MANAGER_SETUP_CODE="replace-me-with-a-long-random-string"

# Optional: local-only dev sign-in (do not use in production)
DEV_AUTH_ENABLED="false"
NEXT_PUBLIC_DEV_AUTH_ENABLED="false"
DEV_AUTH_CODE="replace-me-with-a-strong-code"

# Stripe (optional) - enable online card payments via Stripe Checkout
STRIPE_SECRET_KEY="sk_live_or_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
